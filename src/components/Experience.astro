---
const skills = [
  "Angular",
  "Firebase",
  "TypeScript",
  "JavaScript",
  "HTML5",
  "CSS3/Tailwind",
  "Git",
  "Node.js",
];

const experiences = [
  {
    role: "Desarrollador de Proyectos de Innovación",
    company: "Confidencial", // Placeholder as I don't have the company name
    period: "Presente",
    description:
      "Liderazgo y desarrollo de soluciones tecnológicas innovadoras utilizando Angular y Firebase. Implementación de sistemas críticos como Constancias de Inexistencia y Anotaciones Judiciales.",
  },
];
---

<section id="experience" class="py-20 px-4 bg-slate-900/50 border-y border-slate-800">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 font-pixel text-purple-400">
      &lt;System_Log /&gt;
    </h2>

    <div class="grid md:grid-cols-2 gap-12 font-mono">
      <!-- Skills Column -->
      <div class="skills-container opacity-0 -translate-x-10">
        <div class="bg-slate-950 border border-slate-700 p-4 h-full relative">
          <div class="absolute top-0 left-0 bg-slate-700 text-xs text-white px-2 py-1">
            MODULES_LOADED
          </div>
          <div class="mt-6 space-y-2">
            {
              skills.map((skill) => (
                <div class="flex items-center gap-2 text-slate-300 hover:text-purple-400 transition-colors group cursor-default">
                  <span class="text-purple-600 group-hover:text-purple-400">[OK]</span>
                  <span class="w-full border-b border-slate-800 border-dashed group-hover:border-purple-500/30">
                    {skill}
                  </span>
                  <span class="text-xs text-slate-600 group-hover:text-purple-400">vLatest</span>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Experience Column -->
      <div class="experience-container opacity-0 translate-x-10">
        <div class="bg-slate-950 border border-slate-700 p-4 h-full relative">
          <div class="absolute top-0 left-0 bg-slate-700 text-xs text-white px-2 py-1">
            EXECUTION_HISTORY
          </div>
          <div class="mt-6 space-y-8 relative">
             <!-- Vertical Line -->
             <div class="absolute left-[7px] top-2 bottom-2 w-px bg-slate-800"></div>

            {
              experiences.map((exp) => (
                <div class="relative pl-8 group">
                  <div class="absolute left-0 top-1.5 w-4 h-4 bg-slate-900 border border-purple-500 group-hover:bg-purple-500 transition-colors"></div>
                  
                  <div class="text-xs text-purple-400 mb-1 font-bold">
                    [{exp.period}] :: {exp.company}
                  </div>
                  <h4 class="text-lg font-bold text-white mb-2 group-hover:text-purple-300 transition-colors">
                    > {exp.role}
                  </h4>
                  <p class="text-slate-400 text-sm leading-relaxed border-l-2 border-slate-800 pl-3 group-hover:border-purple-500/50 transition-colors">
                    {exp.description}
                  </p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.to(".skills-container", {
    scrollTrigger: {
      trigger: ".skills-container",
      start: "top bottom-=100",
    },
    opacity: 1,
    x: 0,
    duration: 1,
    ease: "power3.out",
  });

  gsap.to(".experience-container", {
    scrollTrigger: {
      trigger: ".experience-container",
      start: "top bottom-=100",
    },
    opacity: 1,
    x: 0,
    duration: 1,
    ease: "power3.out",
    delay: 0.2,
  });
</script>
