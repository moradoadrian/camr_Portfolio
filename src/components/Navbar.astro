---
const links = [
  { name: "Inicio", href: "#top" },
  { name: "Experiencia", href: "#experience" },
  { name: "Proyectos", href: "#projects" },
  { name: "Contacto", href: "#contact" },
];
---

<nav
  class="fixed top-0 left-0 w-full z-50 border-b border-slate-800 bg-slate-950/90 backdrop-blur-sm font-mono"
  id="navbar"
>
  <div
    class="max-w-7xl mx-auto flex justify-between items-center px-6 py-4"
  >
    <a
      href="#"
      class="text-lg font-bold text-purple-400 hover:text-purple-300 transition-colors"
    >
      ~/camr_portfolio
    </a>

    <!-- Desktop Menu -->
    <ul class="hidden md:flex gap-8">
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-sm text-slate-400 hover:text-purple-400 transition-colors relative group flex items-center gap-1"
            >
              <span class="text-purple-600 opacity-0 group-hover:opacity-100 transition-opacity">></span>
              {link.name}
            </a>
          </li>
        ))
      }
    </ul>

    <!-- Mobile Menu Button -->
    <button
      class="md:hidden text-purple-400 hover:text-purple-300 focus:outline-none border border-slate-700 p-1"
      id="mobile-menu-btn"
    >
      <span class="sr-only">Open menu</span>
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    class="fixed inset-0 bg-slate-950 z-40 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col justify-center items-center gap-8 border-l border-slate-800"
    id="mobile-menu"
  >
    <button class="absolute top-6 right-6 text-purple-400 hover:text-purple-300 border border-slate-700 p-1" id="close-menu-btn">
      <svg
        class="w-8 h-8"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    <div class="flex flex-col gap-6 items-start">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="text-2xl font-bold text-slate-300 hover:text-purple-400 transition-colors mobile-link flex items-center gap-2"
          >
            <span class="text-purple-600">></span> {link.name}
          </a>
        ))
      }
    </div>
  </div>
</nav>

<script>
  const navbar = document.getElementById("navbar");
  const mobileBtn = document.getElementById("mobile-menu-btn");
  const closeBtn = document.getElementById("close-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const mobileLinks = document.querySelectorAll(".mobile-link");

  // Scroll effect
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      navbar?.classList.add("py-2");
    } else {
      navbar?.classList.remove("py-2");
    }
  });

  // Mobile menu toggle
  const toggleMenu = () => {
    mobileMenu?.classList.toggle("translate-x-full");
    document.body.classList.toggle("overflow-hidden");
  };

  mobileBtn?.addEventListener("click", toggleMenu);
  closeBtn?.addEventListener("click", toggleMenu);

  mobileLinks.forEach((link) => {
    link.addEventListener("click", toggleMenu);
  });
</script>
