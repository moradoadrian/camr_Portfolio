<section
  id="contact"
  class="py-20 px-4 relative overflow-hidden border-t border-slate-800"
>
  <div class="max-w-4xl mx-auto text-center relative z-10">
    <h2 class="text-4xl md:text-5xl font-bold mb-8 font-pixel text-purple-400">
      &lt;Initialize_Connection /&gt;
    </h2>
    <p class="text-xl text-slate-400 mb-12 max-w-2xl mx-auto font-mono">
      // Estoy siempre abierto a nuevas oportunidades y colaboraciones.
      <br />
      <span class="text-purple-500">if</span> (project.isInteresting) <span
        class="text-purple-500"
        >{}
        <br />
        &nbsp;&nbsp;contactMe();
        <br />
        <span class="text-purple-500"></span></span
      >
    </p>

    <div
      class="flex flex-col md:flex-row gap-6 justify-center items-center font-mono"
    >
      <a
        href="mailto:cesar.morado@example.com"
        class="group relative px-8 py-4 bg-slate-950 hover:bg-slate-900 border-2 border-slate-700 hover:border-purple-500 transition-all duration-300 flex items-center gap-4 min-w-[250px]"
      >
        <div
          class="p-2 bg-slate-800 group-hover:bg-purple-900/50 transition-colors border border-slate-600"
        >
          <svg
            class="w-6 h-6 text-purple-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
        </div>
        <div class="text-left">
          <p class="text-xs text-slate-500 group-hover:text-purple-400">
            EXECUTE_MAIL_CLIENT
          </p>
          <p class="text-white font-bold group-hover:text-purple-300">
            Send_Email()
          </p>
        </div>
      </a>

      <a
        href="https://www.linkedin.com/in/moradoadrian/"
        target="_blank"
        class="group relative px-8 py-4 bg-slate-950 hover:bg-slate-900 border-2 border-slate-700 hover:border-blue-500 transition-all duration-300 flex items-center gap-4 min-w-[250px]"
      >
        <div
          class="p-2 bg-slate-800 group-hover:bg-blue-900/50 transition-colors border border-slate-600"
        >
          <svg
            class="w-6 h-6 text-blue-400"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
          </svg>
        </div>
        <div class="text-left">
          <p class="text-xs text-slate-500 group-hover:text-blue-400">
            CONNECT_NETWORK
          </p>
          <p class="text-white font-bold group-hover:text-blue-300">
            Open_LinkedIn()
          </p>
        </div>
      </a>
    </div>
  </div>
</section>
