<section id="technologies" class="py-20 px-4 relative border-t border-slate-800 bg-slate-950">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 font-pixel text-purple-400">
      &lt;Tech_Stack /&gt;
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {techCategories.map((category) => (
        <div class="tech-category group">
          <div class="bg-slate-900/50 border-2 border-slate-700 p-6 h-full hover:border-purple-500 transition-all duration-300 relative overflow-hidden">
            <!-- Header -->
            <div class="flex items-center gap-3 mb-6 border-b border-slate-700 pb-4">
              <span class="text-2xl">{category.icon}</span>
              <h3 class="font-mono text-lg text-purple-300 font-bold tracking-wider">
                {category.name}
              </h3>
            </div>

            <!-- Grid -->
            <div class="grid grid-cols-2 gap-4">
              {category.skills.map((skill) => (
                <div class="flex flex-col items-center justify-center p-3 bg-slate-800/50 border border-slate-700 hover:bg-purple-900/20 hover:border-purple-500/50 transition-all duration-300 group/skill cursor-default">
                  <div class="w-8 h-8 mb-2 text-slate-300 group-hover/skill:text-white transition-colors" set:html={skill.icon} />
                  <span class="text-xs font-mono text-slate-400 group-hover/skill:text-purple-300 text-center">
                    {skill.name}
                  </span>
                </div>
              ))}
            </div>

            <!-- Decorative Corner -->
            <div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-purple-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="absolute bottom-0 left-0 w-4 h-4 border-b-2 border-l-2 border-purple-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
